#!/bin/bash
# Switch to dark mode

# Check for theming scripts (popular dotfiles first, then hamr fallback)
# Add more dotfile paths here as needed
SWITCHWALL_PATHS=(
    "${XDG_CONFIG_HOME:-$HOME/.config}/quickshell/ii/scripts/colors/switchwall.sh"  # end-4 illogical-impulse
    "${XDG_CONFIG_HOME:-$HOME/.config}/hamr/scripts/switchwall.sh"                   # hamr standalone
)

for script in "${SWITCHWALL_PATHS[@]}"; do
    if [[ -x "$script" ]]; then
        "$script" --mode dark --noswitch
        exit 0
    fi
done

# Fallback to gsettings
if command -v gsettings &>/dev/null; then
    gsettings set org.gnome.desktop.interface color-scheme prefer-dark
    notify-send "Dark mode" "Set via gsettings"
else
    notify-send "Dark mode" "No theme script found"
fi

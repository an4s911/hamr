#!/bin/bash
# Set accent color
# Usage: accentcolor [color]
# Customize this script for your setup

# For end-4 dotfiles users with switchwall.sh
SCRIPT_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/quickshell/ii/scripts/colors"
if [[ -x "$SCRIPT_DIR/switchwall.sh" ]]; then
    "$SCRIPT_DIR/switchwall.sh" --noswitch --color "$@"
else
    notify-send "Accent color" "switchwall.sh not found - customize this script for your setup"
fi
